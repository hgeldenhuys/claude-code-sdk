{
  "name": "claude-code-sdk",
  "version": "0.1.0",
  "description": "SDK for tracking Claude Code changes, extending components, and plugin marketplace",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "sesh": "./bin/sesh.ts",
    "transcript": "./bin/transcript.ts",
    "transcript-tui": "./bin/transcript-tui.ts",
    "hooks": "./bin/hooks.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tracker": {
      "import": "./dist/tracker/index.js",
      "types": "./dist/tracker/index.d.ts"
    },
    "./marketplace": {
      "import": "./dist/marketplace/index.js",
      "types": "./dist/marketplace/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "types": "./dist/plugins/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    }
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bunx @biomejs/biome check src/",
    "lint:fix": "bunx @biomejs/biome check --write src/",
    "format": "bunx @biomejs/biome format --write src/",
    "typecheck": "bunx tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build",
    "docs": "bun src/cli/docs.ts",
    "docs:check": "bun src/cli/docs.ts check",
    "docs:fetch": "bun src/cli/docs.ts fetch",
    "docs:status": "bun src/cli/docs.ts status",
    "transcript": "bun bin/transcript.ts",
    "transcript-tui": "bun bin/transcript-tui.ts",
    "sesh": "bun bin/sesh.ts",
    "hooks": "bun bin/hooks.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "keywords": [
    "claude-code",
    "sdk",
    "anthropic",
    "plugins",
    "marketplace",
    "hooks",
    "session-naming",
    "ai-tools"
  ],
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "@types/blessed": "^0.1.27",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "claude-hooks-sdk": "^0.8.6",
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "yaml": "^2.8.2"
  }
}
